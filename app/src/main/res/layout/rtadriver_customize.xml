<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/txtLicenseNo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/tv_width10"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/text_size_finpdetailscustomize"
            android:textStyle="bold" />

        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtExpiryDate"
            android:layout_width="@dimen/tv_fipdate_custom_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/text_size_finpdetailscustomize"
            android:textStyle="bold" />

        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtPlateSource"
            android:layout_width="@dimen/tv_fipfineamount_custom_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/text_size_finpdetailscustomize"
            android:textStyle="bold" />

        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtTicketNo"
            android:layout_width="@dimen/tv_fippenalty_custom_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/text_size_finpdetailscustomize" />

        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtBirthYear"
            android:layout_width="@dimen/tv_fipknowledgefee_custom_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/tv_width10"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/text_size_finpdetailscustomize"
            android:textStyle="bold" />


        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_details"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:clickable="true"
            android:src="@drawable/details" />
    </LinearLayout>
</RelativeLayout>