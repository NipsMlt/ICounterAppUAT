<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvrtaservice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/ListofPendingPayment"
                android:textColor="@color/colorgreyrtabuttons"
                android:textSize="30sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:id="@+id/tv_seconds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/seconds"
                        android:textColor="@color/colorgreyrtabuttons"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_rtamainservices_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="60"
                        android:textColor="@color/colorgreyrtabuttons"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/tv_width20"
                android:layout_marginRight="@dimen/tv_width20"
                android:background="@color/colorblack" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tv_width20"
                android:layout_marginRight="@dimen/tv_width20">

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />

                <CheckBox
                    android:id="@+id/cb_emiratesid_selectall"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:buttonTint="@color/colorgrey"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5" />


                <TextView
                    android:id="@+id/tv_txt_emiratesid_orderinvoiceno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/OrderInvoiceNo"
                    android:textAlignment="center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_finpdetailsheadingscustomize"
                    android:textStyle="bold" />


                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />

                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />


                <TextView
                    android:id="@+id/tv_txt_emiratesid_orderonvoicedate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/OrderInvoiceDate"
                    android:textAlignment="center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_finpdetailsheadingscustomize"
                    android:textStyle="bold" />

                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />

                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />


                <TextView
                    android:id="@+id/tv_txt_emiratesid_statuscode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/StatusCode"
                    android:textAlignment="center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_finpdetailsheadingscustomize"
                    android:textStyle="bold" />


                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />

                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />


                <TextView
                    android:id="@+id/tv_txt_emiratesid_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/Amount"
                    android:textAlignment="center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_finpdetailsheadingscustomize"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />

                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/tv_txt_emiratesid_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/Status"
                    android:textAlignment="center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_finpdetailsheadingscustomize"
                    android:textStyle="bold" />


                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />

                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />


                <TextView
                    android:id="@+id/tv_txt_emiratesid_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/Details"
                    android:textAlignment="center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_finpdetailsheadingscustomize"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />

            </LinearLayout>

            <ListView
                android:id="@+id/lv_rmsemiratesid_listofpendingdetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/tv_width20"
                android:layout_marginRight="@dimen/tv_width20"
                android:background="@drawable/recyclerview_border_fipdetails"
                android:clickable="true"
                android:fadeScrollbars="false"
                android:scrollIndicators="top|bottom"
                android:scrollbarSize="@dimen/tv_width20"></ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tv_width20"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_txt_emiratesid_itemquantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Itemquantity"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_rtafineinquirylist"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_emiratesid_itemquantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 0"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_rtafineinquirylist"
                    android:textStyle="bold" />
            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_txt_emiratesid_amountbelow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Amountwithcolon"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_rtafineinquirylist"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_emiratesid_amountbelow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 0.0"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_rtafineinquirylist"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tv_width20">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/unpayableticket" />

                    <TextView
                        android:id="@+id/tv_txt_lppunpayablepayments"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/UnPayableTickets"
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/text_size_rtafineinquirylist" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_emiratesid_lisofpending_detailscontinue"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="26dp"
                android:background="@drawable/gradientlighttodarkgrey"
                android:clickable="true"
                android:text="@string/Continue"
                android:textColor="@color/colorwhite" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tv_width20"
            android:gravity="left">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/govofdubailogo" />

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/iv_mlt_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/mltlogo" />

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="@dimen/rtalogowidth"
                android:layout_height="@dimen/rtalogoheight"
                android:src="@drawable/rtaserviceslogo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <Button
                android:id="@+id/btnrta_rmssalesorder_lppback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
               android:background="@drawable/gradientlighttodarkgrey"
                android:clickable="true"
                android:drawableLeft="@drawable/rtaback"
                android:onClick="onClick"
                android:padding="5dp"
                android:text="@string/Back"
                android:textColor="@color/colorwhite" />

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnrta_rmssalesorder_lppinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
               android:background="@drawable/gradientlighttodarkgrey"
                android:clickable="true"
                android:drawableLeft="@drawable/rtainfo"
                android:onClick="onClick"
                android:padding="5dp"
                android:text="@string/Info"
                android:textColor="@color/colorwhite" />

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnrta_rmssalesorder_lpphome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
               android:background="@drawable/gradientlighttodarkgrey"
                android:clickable="true"
                android:drawableLeft="@drawable/rtahome"
                android:onClick="onClick"
                android:padding="5dp"
                android:text="@string/Home"
                android:textColor="@color/colorwhite" />

            <android.support.v4.widget.Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>