<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rtabackgrnd"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <utility.GifView
                android:id="@+id/iv_swpiecard_animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="@dimen/tv_width50"
                android:layout_marginTop="@dimen/tv_width10"
                custom:gif="@drawable/selectlanguage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv_width50"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_langenglish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@drawable/englishbtnpassive" />


                <ImageView
                    android:id="@+id/iv_langmalyalam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@drawable/malayalambtnpassive" />

                <android.support.v4.widget.Space
                    android:layout_width="5dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/iv_langurdu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@drawable/pakistanibtnpassive" />

                <android.support.v4.widget.Space
                    android:layout_width="5dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/iv_langchinese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@drawable/chinesebtnpassive" />

                <android.support.v4.widget.Space
                    android:layout_width="5dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/iv_langarabic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@drawable/arabicbtnpassive" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_hidden"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorinvisible"
                    android:clickable="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_copyright"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Copyright"
                        android:textColor="@color/colorwhite"
                        android:textSize="@dimen/tv_width20" />

                    <TextView
                        android:id="@+id/tv_copyright_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\u00a9"
                        android:textColor="@color/colorwhite"
                        android:textSize="@dimen/tv_width20" />

                    <TextView
                        android:id="@+id/tv_copyright_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019"
                        android:textColor="@color/colorwhite"
                        android:textSize="@dimen/tv_width20" />

                    <TextView
                        android:id="@+id/tv_copyright_mlt_allrightsreserved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MLT"
                        android:textColor="@color/colorwhite"
                        android:textSize="@dimen/tv_width20" />

                    <TextView
                        android:id="@+id/tv_copyright_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V"
                        android:textColor="@color/colorwhite"
                        android:textSize="@dimen/tv_width20" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
