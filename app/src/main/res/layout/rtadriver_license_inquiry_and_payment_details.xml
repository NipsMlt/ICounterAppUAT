<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvrtaservice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/DrivingLicense"
                android:textColor="@color/colorgreyrtabuttons"
                android:textSize="30sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/tv_width20">

                    <TextView
                        android:id="@+id/tv_seconds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/seconds"
                        android:textColor="@color/colorgreyrtabuttons"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_rtamainservices_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="60"
                        android:textColor="@color/colorgreyrtabuttons"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/tv_width20"
                android:layout_marginRight="@dimen/tv_width20"
                android:background="@color/colorblack" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tv_width20"
                android:layout_marginRight="@dimen/tv_width20">

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />


                <TextView
                    android:id="@+id/tv_driverdetailslicenseno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/LicenseNumber"
                    android:textAlignment="center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_finpdetailsheadingscustomize"
                    android:textStyle="bold" />


                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />

                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />


                <TextView
                    android:id="@+id/tv_driverdetailsexpirydate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/ExpiryDate"
                    android:textAlignment="center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_finpdetailsheadingscustomize"
                    android:textStyle="bold" />


                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />

                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />


                <TextView
                    android:id="@+id/tv_driverdetailsplatesource"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/PlateSource"
                    android:textAlignment="center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_finpdetailsheadingscustomize"
                    android:textStyle="bold" />


                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />

                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />


                <TextView
                    android:id="@+id/tv_driverdetailsticketno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/TicketNumber"
                    android:textAlignment="center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_finpdetailsheadingscustomize"
                    android:textStyle="bold" />


                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />

                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />


                <TextView
                    android:id="@+id/tv_driverdetailsbirthyear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/BirthYear"
                    android:textAlignment="center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_finpdetailsheadingscustomize"
                    android:textStyle="bold" />


                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />

                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />


                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />


                <TextView
                    android:id="@+id/tv_driverdetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/Details"
                    android:textAlignment="center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_finpdetailsheadingscustomize"
                    android:textStyle="bold" />

                <android.support.v4.widget.Space
                    android:layout_width="22dp"
                    android:layout_height="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:background="@color/colorblack" />

            </LinearLayout>

            <ListView
                android:id="@+id/vehiclerenewalinquirydetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/tv_width20"
                android:layout_marginRight="@dimen/tv_width20"
                android:background="@drawable/recyclerview_border_fipdetails"
                android:clickable="true"></ListView>
            <!--<android.support.v7.widget.RecyclerView
                android:id="@+id/rv_fineinquirydetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/recyclerview_border_fipdetails"
                android:scrollbars="vertical" />-->
        </LinearLayout>


        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tv_width20">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/details" />

                    <TextView
                        android:id="@+id/tv_txtdriverdetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Details"
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/text_size_rtafineinquirylist" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_driverdetailscontinue"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/tv_width20"
                android:background="@drawable/gradientlighttodarkgrey"
                android:clickable="true"
                android:text="@string/Continue"
                android:textColor="@color/colorwhite" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tv_width20"
            android:gravity="left">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/govofdubailogo" />

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_mlt_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/mltlogo" />

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="@dimen/rtalogowidth"
                android:layout_height="@dimen/rtalogoheight"
                android:src="@drawable/rtaserviceslogo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <Button
                android:id="@+id/btn_rtadrivingback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
               android:background="@drawable/gradientlighttodarkgrey"
                android:clickable="true"
                android:drawableLeft="@drawable/rtaback"
                android:onClick="onClick"
                android:padding="5dp"
                android:text="@string/Back"
                android:textColor="@color/colorwhite" />

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_rtadrivinginfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
               android:background="@drawable/gradientlighttodarkgrey"
                android:clickable="true"
                android:drawableLeft="@drawable/rtainfo"
                android:padding="5dp"
                android:text="@string/Info"
                android:textColor="@color/colorwhite" />

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_rtadrivinghome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
               android:background="@drawable/gradientlighttodarkgrey"
                android:clickable="true"
                android:drawableLeft="@drawable/rtahome"
                android:onClick="onClick"
                android:padding="5dp"
                android:text="@string/Home"
                android:textColor="@color/colorwhite" />

            <android.support.v4.widget.Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>