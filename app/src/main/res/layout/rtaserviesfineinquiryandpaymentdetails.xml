<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvrtaservice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/FineInquiryandPayment"
                android:textColor="@color/colorgreyrtabuttons"
                android:textSize="30sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:id="@+id/tv_seconds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/seconds"
                        android:textColor="@color/colorgreyrtabuttons"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_rtamainservices_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="60"
                        android:textColor="@color/colorgreyrtabuttons"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/tv_width20"
                android:layout_marginRight="@dimen/tv_width20"
                android:background="@color/colorblack" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tv_width20"
                android:layout_marginRight="@dimen/tv_width20">

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />

                <CheckBox
                    android:id="@+id/cb_fipselectall"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:buttonTint="@color/colorgrey"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5" />


                <TextView
                    android:id="@+id/tv_ticketno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/TicketNumber"
                    android:textAlignment="center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_finpdetailsheadingscustomize"
                    android:textStyle="bold" />


                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />

                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />


                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/Date"
                    android:textAlignment="center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_finpdetailsheadingscustomize"
                    android:textStyle="bold" />


                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />

                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />


                <TextView
                    android:id="@+id/tv_txtfineamountdetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/FineAmount"
                    android:textAlignment="center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_finpdetailsheadingscustomize"
                    android:textStyle="bold" />


                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />

                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />


                <TextView
                    android:id="@+id/tv_penalty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/Penalty"
                    android:textAlignment="center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_finpdetailsheadingscustomize"
                    android:textStyle="bold" />


                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />

                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />


                <TextView
                    android:id="@+id/tv_knowledgefee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/KnowledgeFee"
                    android:textAlignment="center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_finpdetailsheadingscustomize"
                    android:textStyle="bold" />


                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />

                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />


                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/Total"
                    android:textAlignment="center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_finpdetailsheadingscustomize"
                    android:textStyle="bold" />


                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />

                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />


                <TextView
                    android:id="@+id/tv_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/Details"
                    android:textAlignment="center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size_finpdetailsheadingscustomize"
                    android:textStyle="bold" />

                <android.support.v4.widget.Space
                    android:layout_width="12.5dp"
                    android:layout_height="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorblack" />

            </LinearLayout>

            <ListView
                android:id="@+id/rv_fineinquirydetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/tv_width20"
                android:layout_marginRight="@dimen/tv_width20"
                android:background="@drawable/recyclerview_border_fipdetails"
                android:clickable="true"
                android:fadeScrollbars="false"
                android:scrollIndicators="top|bottom"
                android:scrollbarSize="@dimen/tv_width20"></ListView>
            <!--<android.support.v7.widget.RecyclerView
                android:id="@+id/rv_fineinquirydetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/recyclerview_border_fipdetails"
                android:scrollbars="vertical" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tv_width20"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_txtfinecount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/FineCount"
                            android:textColor="@color/colorblack"
                            android:textSize="@dimen/text_size_rtafineinquirylist"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_finecount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 0"
                            android:textColor="@color/colorblack"
                            android:textSize="@dimen/text_size_rtafineinquirylist"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <android.support.v4.widget.Space
                        android:layout_width="10dp"
                        android:layout_height="0dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_txtblackpointscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/BlackPointsCount"
                            android:textColor="@color/colorblack"
                            android:textSize="@dimen/text_size_rtafineinquirylist"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_blackpointscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 0.0"
                            android:textColor="@color/colorblack"
                            android:textSize="@dimen/text_size_rtafineinquirylist"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <android.support.v4.widget.Space
                        android:layout_width="10dp"
                        android:layout_height="0dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_txtfineamount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fineAmount"
                            android:textColor="@color/colorblack"
                            android:textSize="@dimen/text_size_rtafineinquirylist"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_fineamount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 0.0"
                            android:textColor="@color/colorblack"
                            android:textSize="@dimen/text_size_rtafineinquirylist"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_txtselectedfine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/SelectedFine"
                            android:textColor="@color/colorblack"
                            android:textSize="@dimen/text_size_rtafineinquirylist"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_selectedfine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 0"
                            android:textColor="@color/colorblack"
                            android:textSize="@dimen/text_size_rtafineinquirylist"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <android.support.v4.widget.Space
                        android:layout_width="10dp"
                        android:layout_height="0dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_txtselectedfineamount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/SelectedFineAmount"
                            android:textColor="@color/colorblack"
                            android:textSize="@dimen/text_size_rtafineinquirylist"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_selectedfineamount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 0.0"
                            android:textColor="@color/colorblack"
                            android:textSize="@dimen/text_size_rtafineinquirylist"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tv_width20">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/unpayableticket" />

                    <TextView
                        android:id="@+id/tv_unpayabletickets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/UnPayableTickets"
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/text_size_rtafineinquirylist" />
                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/details" />

                    <TextView
                        android:id="@+id/tv_txtdetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Details"
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/text_size_rtafineinquirylist" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_fipdetailscontinue"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/tv_width20"
                android:background="@drawable/gradientlighttodarkgrey"
                android:clickable="true"
                android:text="@string/Continue"
                android:textColor="@color/colorwhite" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tv_width20"
            android:gravity="left">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/govofdubailogo" />

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/iv_mlt_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/mltlogo" />

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="@dimen/rtalogowidth"
                android:layout_height="@dimen/rtalogoheight"
                android:src="@drawable/rtaserviceslogo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <Button
                android:id="@+id/btnrtafipback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
               android:background="@drawable/gradientlighttodarkgrey"
                android:clickable="true"
                android:drawableLeft="@drawable/rtaback"
                android:onClick="onClick"
                android:padding="5dp"
                android:text="@string/Back"
                android:textColor="@color/colorwhite" />

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnrtafipinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
               android:background="@drawable/gradientlighttodarkgrey"
                android:clickable="true"
                android:drawableLeft="@drawable/rtainfo"
                android:padding="5dp"
                android:text="@string/Info"
                android:textColor="@color/colorwhite" />

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnrtafiphome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
               android:background="@drawable/gradientlighttodarkgrey"
                android:clickable="true"
                android:drawableLeft="@drawable/rtahome"
                android:onClick="onClick"
                android:padding="5dp"
                android:text="@string/Home"
                android:textColor="@color/colorwhite" />

            <android.support.v4.widget.Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>