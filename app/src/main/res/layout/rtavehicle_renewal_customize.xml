<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/txtPlateNo"
            android:layout_width="@dimen/tv_vticketfineno_custom_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="12345"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_finpdetailscustomize"
            android:textStyle="bold" />

        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtPlateSource"
            android:layout_width="@dimen/tv_vdate_custom_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="DXB"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_finpdetailscustomize"
            android:textStyle="bold" />

        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtPlateCategory"
            android:layout_width="@dimen/tv_vfineamount_custom_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="12345"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_finpdetailscustomize"
            android:textStyle="bold" />

        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtPlateType"
            android:layout_width="@dimen/tv_vpenalty_custom_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="12345"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_finpdetailscustomize" />

        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtExpiryDate"
            android:layout_width="@dimen/tv_vknowledgefee_custom_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="12345"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_finpdetailscustomize"
            android:textStyle="bold" />


        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_details"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:clickable="true"
            android:src="@drawable/details"
            android:textAlignment="center" />
    </LinearLayout>
</RelativeLayout>