<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_coverart"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/cash" />

        <TextView
            android:id="@+id/tv_coverart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Life In UAE"
            android:textColor="#E83E2E"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llgrid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="right"
                android:drawableLeft="@drawable/ic_keyboard_arrow_left_grey_800_18dp"
                android:text="Back"
                android:background="@color/colorwhite"
                android:clickable="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <GridView
                    android:id="@+id/gridviewsubcategories"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:columnWidth="0dp"
                    android:gravity="center"
                    android:horizontalSpacing="-10dp"
                    android:numColumns="3"
                    android:stretchMode="columnWidth"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="0dp"
                    android:verticalSpacing="5dp"
                    android:clickable="true"/>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

