<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:centerColor="@color/colorredlight" android:endColor="@color/colorred" android:startColor="@color/colorredlight" />

            <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:topLeftRadius="10dp" android:topRightRadius="10dp" />

            <stroke android:width="3dp" android:color="@color/colorredlightborder"></stroke>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:centerColor="@color/colorredlight" android:endColor="@color/colorred" android:startColor="@color/colorredlight" />

            <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:topLeftRadius="10dp" android:topRightRadius="10dp" />

            <stroke android:width="2dp" android:color="@color/colorred"></stroke>
        </shape>
    </item>
</selector>
